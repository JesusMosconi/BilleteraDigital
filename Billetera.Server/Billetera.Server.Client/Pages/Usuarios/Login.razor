</header>

<nav class="mobile-nav @(showMobileMenu ? "show" : "")">
    <a href="/" class="nav-link-header">Inicio</a>
    <a href="/registro" class="nav-link-header">Registrarse</a>
    <!-- Agregar los enlaces que correspondan a cada página -->
</nav>

<div class="main-content">
    <div class="login-body">
        <main class="form-signin">
            <div class="login-logo">
                <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="currentColor" class="bi bi-wallet2" viewBox="0 0 16 16" style="color: #E679C6;">
                    <path d="M12.136.326A1.5 1.5 0 0 1 14 1.78V3h.5A1.5 1.5 0 0 1 16 4.5v9a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 13.5v-9a1.5 1.5 0 0 1 1.432-1.499zM5.562 3H13V1.78a.5.5 0 0 0-.621-.484zM1.5 4a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5z" />
                </svg>
            </div>

            <h1 class="h3 mb-3 fw-normal">Iniciar Sesión</h1>

            @if (!string.IsNullOrEmpty(mensajeError))
            {
                <div class="alert alert-danger" role="alert">
                    @mensajeError
                </div>
            }

            <EditForm Model="usuario" OnValidSubmit="Grabar">
                <DataAnnotationsValidator />

                <div class="form-floating mb-2">
                    <input type="text"
                           class="form-control"
                           id="floatingCuil"
                           @bind="CuilFormateado"
                           @bind:event="oninput"
                           placeholder="XX-XXXXXXXX-X"
                           maxlength="13"
                           inputmode="numeric"
                           required />
                    <label for="floatingCuil">CUIL</label>
                    <ValidationMessage For="@(() => usuario.CUIL)" />
                </div>

                <div class="form-floating mb-2">
                    <input type="email"
                           class="form-control"
                           id="floatingEmail"
                           @bind="usuario.Correo"
                           placeholder="nombre@ejemplo.com"
                           required />
                    <label for="floatingEmail">Correo Electrónico</label>
                    <ValidationMessage For="@(() => usuario.Correo)" />
                </div>

                <div class="form-floating mb-3 password-toggle">
                    <input type="@tipoInputPassword"
                           class="form-control"
                           id="floatingPassword"
                           @bind="usuario.Password"
                           placeholder="Contraseña"
                           required />
                    <label for="floatingPassword">Contraseña</label>
                    <button class="btn-eye" type="button" @onclick="TogglePasswordVisibility">
                        @if (mostrarPassword)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                            </svg>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z" />
                                <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z" />
                                <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z" />
                            </svg>
                        }
                    </button>
                    <ValidationMessage For="@(() => usuario.Password)" />
                </div>

                <button class="btn btn-primary" type="submit">Iniciar Sesión</button>
                <button class="btn btn-outline-secondary" type="button" @onclick="Cancelar">Volver Atrás</button>

                <p class="mt-3 mb-3 text-muted text-center">
                    ¿No tienes cuenta? <a href="/registro">Regístrate aquí</a>
                </p>
                <p class="text-muted">&copy; 2025 Billetera Digital</p>
            </EditForm>
        </main>
    </div>
</div>

<!-- Componente de Tutorial -->
<TutorialComponent>
    <TutorialContent>
        <h6><strong>Iniciar Sesión</strong></h6>
        <p>Inicie sesión utilizando los datos que registró previamente.</p>
        <p>Si aún no tiene una cuenta, regístrese primero desde la pestaña de <strong>Registro de Usuario.</strong></p>
    </TutorialContent>
</TutorialComponent>

@code {
    private UsuariosDTO.Login usuario = new();
    private string? mensajeError;
    private bool mostrarPassword = false;
    private string tipoInputPassword => mostrarPassword ? "text" : "password";

    private void TogglePasswordVisibility() => mostrarPassword = !mostrarPassword;

    private string CuilFormateado
    {
        get => usuario.CUIL ?? string.Empty;
        set
        {
            if (string.IsNullOrEmpty(value))
            {
                usuario.CUIL = string.Empty;
                return;
            }

            var soloNumeros = new string(value.Where(char.IsDigit).ToArray());
            if (soloNumeros.Length > 11)
                soloNumeros = soloNumeros.Substring(0, 11);

            if (soloNumeros.Length <= 2)
            {
                usuario.CUIL = soloNumeros;
            }
            else if (soloNumeros.Length <= 10)
            {
                usuario.CUIL = $"{soloNumeros.Substring(0, 2)}-{soloNumeros.Substring(2)}";
            }
            else
            {
                usuario.CUIL = $"{soloNumeros.Substring(0, 2)}-{soloNumeros.Substring(2, 8)}-{soloNumeros.Substring(10)}";
            }
        }
    }

    private async Task Grabar()
    {
        try
        {
            mensajeError = null;
            await authService.Login(usuario);
            Navigation.NavigateTo("/billetera", forceLoad: true);
        }
        catch (HttpRequestException ex)
        {
            var mensaje = ex.Message;

            if (mensaje.Contains("\"mensaje\"") || mensaje.Contains("mensaje"))
            {
                var inicioMensaje = mensaje.IndexOf("mensaje");
                if (inicioMensaje >= 0)
                {
                    var inicioCita = mensaje.IndexOf("\"", inicioMensaje + 10);
                    var finCita = mensaje.IndexOf("\"", inicioCita + 1);

                    if (finCita > inicioCita)
                    {
                        mensajeError = mensaje.Substring(inicioCita + 1, finCita - inicioCita - 1);
                        return;
                    }
                }
            }

            mensajeError = mensaje.Contains("401") || mensaje.Contains("Unauthorized")
                ? "CUIL o contraseña incorrectos"
                : "Error al iniciar sesión";
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }
    }

    private void Cancelar() => Navigation.NavigateTo("/");

    private bool showMobileMenu = false;

    private void ToggleMobileMenu()
    {
        showMobileMenu = !showMobileMenu;
    }
}
